{
  "name": "mp3-sync-app",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "description": "",
  "main": ".webpack/main/main.js",
  "scripts": {
    "start": "npm run generate:prisma && electron-forge start",
    "package": "npm run generate:prisma && electron-forge package",
    "make": "npm run generate:prisma && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "generate:prisma": "npm run --workspace=packages/main prisma:generate",
    "copy:prisma-schema": "cpy packages/main/prisma/schema.prisma .webpack/main",
    "build": "npm run generate:prisma && electron-forge make --skip-package",
    "build-package": "npm run generate:prisma && electron-forge make"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@nestjs/microservices": "^11.1.0",
    "mp3-sync-app": "file:"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-webpack": "^7.8.0",
    "@types/node": "^22.15.2",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "css-loader": "^7.1.2",
    "electron": "^35.2.1",
    "eslint": "^9.25.1",
    "node-loader": "^2.1.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
